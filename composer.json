{
  "autoload": {
    "psr-4": {
      "QualityTools\\": "src/",
      "QualityTools\\Rules\\": "src/Rules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "QualityTools\\Tests\\Codeception\\": "tests/Codeception/",
      "QualityTools\\Tests\\PhpUnit\\": "tests/PhpUnit/"
    }
  },
  "require-dev": {
    "rector/rector": "@stable",
    "phing/phing": "@stable",
    "phpunit/phpunit": "@stable",
    "mockery/mockery": "@stable",
    "codeception/codeception": "@stable",
    "phpspec/phpspec": "@stable",
    "behat/behat": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "phpmd/phpmd": "@stable",
    "friendsofphp/php-cs-fixer": "@stable",
    "vimeo/psalm": "@stable",
    "phpstan/phpstan": "@stable",
    "codeception/module-phpbrowser": "^1.0.0",
    "codeception/module-asserts": "^1.0.0",
    "brianium/paratest": "@stable",
    "consolidation/robo": "@stable",
    "symfony/var-dumper": "@stable"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs . --standard=phpcs.xml",
    "php-cs-fixer-check": "php-cs-fixer fix . --config=.php-cs-fixer.php --dry-run",
    "php-cs-fixer-fix": "php-cs-fixer fix . --config=.php-cs-fixer.php",
    "phpmd": "phpmd . xml codesize,design,naming,controversial,unusedcode",
    "psalm": "psalm -c psalm.xml --show-info=true --find-unused-code --find-unused-psalm-suppress src",
    "phpstan": "phpstan analyse -c phpstan-config.neon --memory-limit=4G"
  }
}
